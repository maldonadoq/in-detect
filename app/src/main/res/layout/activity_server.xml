<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/left_margin"
    android:paddingLeft="@dimen/left_margin"
    android:paddingTop="@dimen/top_margin"
    android:paddingEnd="@dimen/right_margin"
    android:paddingRight="@dimen/right_margin"
    android:paddingBottom="@dimen/bottom_margin"
    tools:context=".ServerActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnDetectOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_local_style"
            android:drawableStart="@android:drawable/checkbox_off_background"
            android:drawableLeft="@android:drawable/checkbox_off_background"
            android:text="@string/classify_car"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>