<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/left_margin"
    android:paddingTop="@dimen/top_margin"
    android:paddingEnd="@dimen/right_margin"
    android:paddingBottom="@dimen/bottom_margin"
    tools:context=".MainActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraView"
        android:layout_width="385dp"
        android:layout_height="440dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnDetectOk"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:background="@drawable/button_style"
            android:drawableStart="@android:drawable/checkbox_off_background"
            android:elevation="12dp"
            android:text="@string/detect_object"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnToggleCamera"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:elevation="12dp"
            android:textColor="@color/white"
            android:layout_marginStart="7dp"
            android:drawableStart="@android:drawable/stat_notify_sync"/>

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:elevation="12dp"
            android:textColor="@color/white"
            android:layout_marginStart="7dp"
            android:drawableStart="@android:drawable/ic_menu_upload"/>
    </LinearLayout>

</LinearLayout>